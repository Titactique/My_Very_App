<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.tristanlelievre.my_very_app">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Recycler_main_activity">
        </activity>
        <activity android:name=".TaskDescriptionActivity">
        </activity>
        <activity
                android:name=".ForgetMeNotActivity"
                android:configChanges="orientation|screenSize"
                android:label="@string/title_activity_forget_me_not"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".FragmentActivity">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity">
        </activity>
    </application>

</manifest>